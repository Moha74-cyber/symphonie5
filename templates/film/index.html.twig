{% extends 'base.html.twig' %}

{% block title %}Ajouter un film{% endblock %}

{% block content %}
<h1>Ajouter un film</h1>

{% if is_granted('ROLE_USER') %}
{{ form(form)}}
{% endif %}


<table class= "table">
    {% for film in films %}
        <tr>
            <td>#{{ loop.index}}</td>
            <td>
                <img src="{{ film.image}}" alt="{{ film.titre}}" class="img-fluid" style="height: 50px"/>
            </td>
             <td>#{{ loop.index}}</td>
             <td>#{{ film.annee}}</td>
             <td>#{{film.duree}}</td>
             <td>#{{ film.realisateur ? film.realisateur.nom : ""}}</td>
             <td>
                            {% for acteur in film.acteurs %}
                    {{ acteur.nom }}
                    {{ not loop.last ? ' / ' }} {# on s√©pare par un / sauf si on est a la fin #}
                {% endfor %}
            </td>
        </tr>
    {% endfor %}
</table>






{% endblock %}

