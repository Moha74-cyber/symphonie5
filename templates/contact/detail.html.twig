{% block js %}
    <script>
        $(function(){
            $('.btn-contact-delete').click(function(e){
                e.preventDefault();
                if (confirm('supprimer ce contact ?')){
                    document.location.href = $(this).attr('href');
                }
            })
        })
    </script>

